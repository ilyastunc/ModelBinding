@model List<string>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width">
        <title>Names</title>
        <link rel="stylesheet" href="/modules/bootstrap/dist/css/bootstrap.min.css">
    </head>
    <body class="m-1 p-1">
        @if (Model.Count() == 0)
        {
            <form method="post" asp-action="Names">
            @for (int i = 0; i < 5; i++)
            {
                <div form-group>
                    <label>Name @(i+1)</label>
                    <input type="text" name="names" id="names" class="form-control">
                </div>
            }
            <input type="submit" value="Submit" class="btn btn-primary">
        </form>
        }
        else
        {
            <table class="table table-striped table-sm">
                @foreach (var item in Model)
                {
                    <tr>
                        <th>Name</th>
                        <td>@item</td>
                    </tr>
                }
            </table>
            <a asp-action="Names" class="btn btn-primary">Back To List</a>
        }
    </body>
</html>